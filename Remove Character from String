//Remove Character from String 
#include <bits/stdc++.h>  
using namespace std;
 int main(){
    string str;
    cout<<"Input string:\n";
    cin>>str;
    cout<<"Enter the character you want to remove\n";
    char c;
    cin>>c;
    string newstr="";
    for(int i=0;i<str.length();i++){
 
        if(str[i]!=c){
            newstr+=string(1,str[i]); 
        }
    }
    cout<<"Converted string is: "<<newstr;
 
}
